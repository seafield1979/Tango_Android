<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:text="カード、単語帳をまとめて移動\n
\n
カードや単語帳は複数個をまとめて移動することができます。
\n
カート、単語帳を長押しするとアイコン選択モードになります。
"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:inputType="textMultiLine"/>


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                app:srcCompat="@drawable/help_icon_long_push"
                />
            <TextView
                android:text="\nアイコン選択モードになると、それぞれのアイコンをチェックすることができます。チェックしたアイコンはまとめて移動できます。\n"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:inputType="textMultiLine"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:srcCompat="@drawable/help_selected_icon_move"
                />
            <TextView
                android:text="\nまとめてチェックしたアイコンをタップしたまま移動先にドロップすると、ドロップ先の場所にアイコンが移動します。\n
"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:inputType="textMultiLine"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="600dp"
                app:srcCompat="@drawable/help_move_icons"
                />
            <TextView
                android:text="\n３つのカード(apple,orange,banana)がまとめて移動しました。\n
"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:inputType="textMultiLine"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                app:srcCompat="@drawable/help_icons_moved"
                />
        </LinearLayout>
    </ScrollView>


</LinearLayout>